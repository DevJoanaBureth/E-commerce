{% extends 'base.html.twig' %}

{% block title %}Leave a message
{% endblock %}

{% block body %}
	<h1>Leave a message</h1>

	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}

	{{ form_start(form) }}
	{{ form_widget(form) }}
	<button class="btn btn-primary">Send</button>
	{{ form_end(form) }}
{% endblock %}
