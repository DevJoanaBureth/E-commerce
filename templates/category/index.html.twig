{% extends 'base.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.category-list {
			display: flex;
			flex-wrap: wrap;
		}
		.category-item {
			margin: 1em;
			padding: 1em;
			width: 30%;
			box-sizing: border-box;
		}
		.category-item p {
			margin: 0.5em 0;
		}
	</style>

	<div class="example-wrapper">
		<h1>Category</h1>

		{% if categories is not empty %}
			<div class="category-list">
				{% for category in categories %}
					<ul class="category-item">
						<li>{{ category.name }}</li>
					</ul>
				{% endfor %}
			</div>
		{% else %}
			<p>No categories available.</p>
		{% endif %}

		{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EMPLOYEE') %}
			<a aria-current="page" href="/new">New Category</a>
			<a aria-current="page" href="/edit">Edit Category</a>
		{% endif %}
	</div>
{% endblock %}
