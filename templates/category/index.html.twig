{% extends 'base.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
	</style>

	<div class="example-wrapper">
		<h1>Category</h1>

		<ul>
			{% for category in categories %}
				<li>{{ category.name }}</li>
			{% else %}
				<li>No categories available.</li>
			{% endfor %}
		</ul>

		{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EMPLOYEE') %}
			<a aria-current="page" href="/new">New Category</a>
			<a aria-current="page" href="/edit">Edit Category</a>
		{% endif %}
	</div>
{% endblock %}
